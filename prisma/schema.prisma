generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Expense {
  id           String   @id @default(cuid())
  amount       Decimal  @db.Decimal(10, 2) // Better for money than Float
  description  String
  paidBy       String   // Person who paid (stored as name/string)
  participants String[] // Array of participant names
  shareType    String   @default("EQUAL") // EQUAL, EXACT, PERCENTAGE
  customShares Json?    // For custom share amounts
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  // Relations
  settlements Settlement[]
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Settlement {
  id         String   @id @default(cuid())
  amount     Decimal  @db.Decimal(10, 2) // Better for money than Float
  fromPerson String   // Person paying
  toPerson   String   // Person receiving
  expenseId  String?  // Optional link to expense
  settled    Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  // Relation to Expense
  expense Expense? @relation(fields: [expenseId], references: [id], onDelete: SetNull)
}
enum ShareType {
  EQUAL
  EXACT
  PERCENTAGE
}
